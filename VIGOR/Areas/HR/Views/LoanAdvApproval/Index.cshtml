
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>

    $(document).ready(function () {
        $("#expand").click(function () {
            $(".history-data").toggle();
        });
    });

</script>
<div class="m-demo__preview">
    <div class="row">
        <div class="col-lg-12">
            <div class="m-portlet">
                @using (Html.BeginForm("Region", "Employee", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Loan/Advance Approvals
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-3">
                                <label>Search:</label>
                                <input type="text" class="form-control" placeholder="">
                            </div>
                            <div class="col-lg-2" style="padding-top:14px;">
                                <button class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <i class="fa fa-info"></i>
                                        <span>Search</span>
                                    </span>
                                </button>
                            </div>

                        </div>
                        <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer move">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline " id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                                        <thead style="background-color:#28469c; color:#ffffff">
                                            <tr role="row">
                                                <th>ID</th>
                                                <th>Application Date</th>
                                                <th>Name</th>
                                                <th>Required Amount</th>
                                                <th>Installment</th>
                                                <th>Approval</th>
                                                <th>Loan/Adv</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td id="expand" colspan="8">Year:2019 <span align="right"><i class="fa fa-arrow-down"></i></span></td>
                                            </tr>
                                            <tr class="history-data" style="display:none;">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <span class="dropdown">
                                                        <a href="#" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">action</a>
                                                        <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-196px, -30px, 0px);">
                                                            <a class="dropdown-item" href="#" onclick="OpenEmployeeEfileModal('@Url.Action("Create", "LeaveVisitApproval")')" id="view"><i class="la la-street-view"></i> Select</a>
                                                        </div>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="EmployeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/Content/VigorJs/Employee/_CreateOrUpdate.js"></script>

