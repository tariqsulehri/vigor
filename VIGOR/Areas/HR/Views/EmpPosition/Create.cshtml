@model ERP.Core.Models.HR.HR_Designation
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New Designation</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("Create", "EmpPosition", FormMethod.Post ,new { id = "PositionForm"}))
        {
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>ID:</label>
                        @Html.TextBoxFor(a => a.DesignationId, new { @class = "form-control", @id = "DesignationId",@readonly="readonly" })
                        @Html.ValidationMessageFor(a => a.DesignationId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Hierarcy No:</label>
                        @Html.TextBoxFor(a => a.HirarchyPriority, new { @class = "form-control", @id = "HirarchyPriority" })
                        @Html.ValidationMessageFor(a => a.HirarchyPriority, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <label>Designation:</label>
                        @Html.TextBoxFor(a => a.Description, new { @class = "form-control", @id = "Description" })
                        @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SubmitPositionForm()">
                    <span>
                        <i class="fa fa-save"></i>
                        <span>Save</span>
                    </span>
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span>
                        <i class="flaticon-cancel"></i>
                        <span>Cancel</span>
                    </span>
                </button>
            </div>
        }
    </div>
</div>