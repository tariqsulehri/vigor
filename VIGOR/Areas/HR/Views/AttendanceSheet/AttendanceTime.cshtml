@model ERP.Core.Models.HR.HR_AttendanceTimings
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Time In Time Out Entry Form</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm())
        {
@Html.HiddenFor(a=>a.EmployeeId)
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>For the Month:</label>
                     <input type="number" class="form-control" readonly="readonly" id="ForTheMonth" value="@Model.AttendanceMonth" name="ForTheMonth" />
                    </div>
                    <div class="col-lg-6">
                        <label>For the Year:</label>
                        <input type="number" class="form-control" readonly="readonly" id="ForTheYear" value="@Model.AttendanceYear" name="ForTheYear" />
                    </div>
                    <div class="col-lg-6">
                        <label>ID:</label>
                        @Html.TextBoxFor(a => a.EmployeeAttendanceID, new { @type = "text", @class = "form-control", @name = "LoanAdvanceID", @readonly = "readonly" })
                        @Html.ValidationMessageFor(a => a.EmployeeAttendanceID, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Name:</label>
                        @Html.TextBoxFor(a => a.HrEmployee.FirstName, new { @type = "text", @class = "form-control", @id = "LoanAdvanceID", @name = "LoanAdvanceID", @readonly = "readonly" })
                        @Html.ValidationMessageFor(a => a.HrEmployee.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Department:</label>
                        @Html.TextBoxFor(a => a.HrEmployee.HrDepartment.Title, new { @type = "text", @class = "form-control", @id = "LoanAdvanceID", @name = "LoanAdvanceID", @readonly = "readonly" })
                        @Html.ValidationMessageFor(a => a.HrEmployee.HrDepartment.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Designation:</label>
                        @Html.TextBoxFor(a => a.HrEmployee.HrDesignation.Description, new { @type = "text", @class = "form-control", @id = "LoanAdvanceID", @name = "LoanAdvanceID", @readonly = "readonly" })
                        @Html.ValidationMessageFor(a => a.HrEmployee.HrDesignation.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Dated:</label>
                        @Html.TextBoxFor(a => a.AttendanceDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(a => a.AttendanceDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th colspan="2">Time In</th>
                                    <th colspan="2">Time Out</th>
                                </tr>
                                <tr>
                                    <td><input type="time" class="form-control" name="TimeIn" id="TimeIn" @Model.Checkin/></td>
                                    @*<td><input type="number" class="form-control" /></td>*@
                                    <td><input type="time" class="form-control"  name="TimeOut" id="TimeOut" @Model.CheckOut /></td>
                                    @*<td><input type="number" class="form-control" /></td>*@
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SubmitChangeTime()">
                    <span>
                        <i class="fa fa-save"></i>
                        <span>Save</span>
                    </span>
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span>
                        <i class="flaticon-cancel"></i>
                        <span>Cancel</span>
                    </span>
                </button>
            </div>
        }
    </div>
</div>