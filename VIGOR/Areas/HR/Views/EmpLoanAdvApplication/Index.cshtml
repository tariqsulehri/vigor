@model IEnumerable<ERP.Core.Models.HR.HR_LoanAdvanceApplication>
    @{
        Layout = null;
    }
    <div class="modal-dialog modal-dialog-centered modal-lg" role="dialog">
        <div class="modal-content ">


            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Loan Advance Application
                            </h3>
                        </div>
                    </div>
                    <div class="m-portlet__head-tools">
                        <ul class="m-portlet__nav">
                            @Html.Hidden("empid", "",new { id = "empid", Value = ViewBag.ID })
                            <li class="m-portlet__nav-item">
                                <button type="button" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air hidden" onclick="OpenEmployeeLAdvApplicationCreateModal('@Url.Action("Create", "EmpLoanAdvApplication", new {EmplId=ViewBag.ID})')">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span>Add</span>
                                    </span>
                                </button>

                            </li>
                            <li class="m-portlet__nav-item">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">
                                    <span>
                                        <i class="flaticon-cancel"></i>
                                        <span>Cancel</span>
                                    </span>
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="m-portlet__body">
                    <table class="table table-striped- table-bordered table-hover table-checkable LoanApp_Table" id="">
                        <thead style="background-color: #28469c; color: #ffffff">
                            <tr>
                                <th>Loan ID</th>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Installment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody></tbody>

                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="LAdvApplicationCreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    </div>
    <script src="~/Content/VigorJs/HR/LoanAdvanceApplication/CreateOrUpdate.js"></script>
    <script src="~/Content/VigorJs/HR/LoanAdvanceApplication/Index.js"></script>