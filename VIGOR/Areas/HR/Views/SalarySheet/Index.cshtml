
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>

    $(document).ready(function () {
        $("#expand").click(function () {
            $("#history-data").toggle();
        });
    });

</script>
<div class="m-demo__preview">
    <div class="row">
        <div class="col-lg-12">
            <div class="m-portlet">
                @using (Html.BeginForm("Region", "Employee", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Manage Salary Sheet
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                
                                <li class="m-portlet__nav-item">
                                    <a href="#" class="btn btn-warning m-btn m-btn--custom m-btn--icon m-btn--air">
                                        <span style=" color:#ffffff">
                                            <i class="flaticon-cancel"></i>
                                            <span>Cancel</span>
                                        </span>
                                    </a>

                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label><strong>Attendance For</strong></label>
                            </div>
                            <div class="col-lg-2">
                                <label>Month:</label>
                                <input type="date" class="form-control" placeholder="Enter card number">
                            </div>
                            <div class="col-lg-2">
                                <label>Department:</label>
                                <select class="form-control " data-val="true" data-val-number="The field CustomerIDasSeller must be a number." data-val-required="The CustomerIDasSeller field is required." id="CustomerIDasSeller" name="CustomerIDasSeller">
                                    <option></option>
                                </select>
                            </div>
                            <div class="col-lg-2">
                                <label>Employee:</label>
                                <select class="form-control " data-val="true" data-val-number="The field CustomerIDasSeller must be a number." data-val-required="The CustomerIDasSeller field is required." id="CustomerIDasSeller" name="CustomerIDasSeller">
                                    <option></option>
                                </select>
                            </div>

                            <div class="col-lg-6" style="padding-top:14px;">
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Load Salary Sheet</span>
                                    </span>
                                </button>
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Print Salary Sheet</span>
                                    </span>
                                </button>
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Bank Letter</span>
                                    </span>
                                </button>
                            </div>
                            <div class="col-lg-6" style="padding-top:14px;">
                                
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Print Salary Slip</span>
                                    </span>
                                </button>
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Calculate Salary</span>
                                    </span>
                                </button>
                                <button class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air">
                                    <span>
                                        <span>Edit Salary</span>
                                    </span>
                                </button>
                            </div>
                            <div class="col-lg-6">
                                <label><strong>Deductions</strong></label>
                                <div class="m-checkbox-inline">
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="example_2" value="1">Income Tax
                                        <span></span>
                                    </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="example_2" value="2">Lunch Payement
                                        <span></span>
                                    </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="example_2" value="3">Prof. Tax
                                        <span></span>
                                    </label>
                                    <label class="m-checkbox">
                                        <input type="checkbox" name="example_2" value="3">Health Ins.
                                        <span></span>
                                    </label>
                                </div>
                                
                            </div>
                        </div>
                        <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer table_div">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="m_table_1_info" style="width: 992px;">
                                        <thead style="background-color:#28469c; color:#ffffff">
                                            <tr role="row">
                                                <th>Name</th>
                                                <th>Designation</th>
                                                <th>Gross Salary</th>
                                                <th>Basic</th>
                                                <th>Allowances</th>
                                                <th>Income Tax</th>
                                                <th>EOBI</th>
                                                <th>H-Insu</th>
                                                <th>Loan</th>
                                                <th>Advance</th>
                                                <th>Fine</th>
                                                <th>Deduction</th>
                                                <th>Net Salary</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td id="expand" colspan="13">Department:Accounts <span align="right"><i class="fa fa-arrow-down"></i></span></td>
                                            </tr>
                                            <tr role="row" id="history-data">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

