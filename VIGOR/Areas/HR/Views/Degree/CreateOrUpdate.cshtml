@model ERP.Core.Models.HR.HR_Degree

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Degree</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("CreateOrUpdate", "Degree", FormMethod.Post, new { id = "DegreeForm" }))
        {
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>ID:</label>
                        @Html.TextBoxFor(a => a.DegreeID, new { @class = "form-control", @id = "DegreeId" })
                        @Html.ValidationMessageFor(a => a.DegreeID, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <label>Description:</label>
                        @Html.TextBoxFor(a => a.Description, new { @class = "form-control", @id = "Description" })
                        @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SubmitDegreeForm()">
                    <span>
                        <i class="fa fa-save"></i>
                        <span>Save</span>
                    </span>
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span>
                        <i class="flaticon-cancel"></i>
                        <span>Cancel</span>
                    </span>
                </button>
            </div>
        }
    </div>
</div>
