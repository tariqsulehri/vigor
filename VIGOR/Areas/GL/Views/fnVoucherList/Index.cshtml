@model IEnumerable<ERP.Core.Models.Finance.FinVoucher>
@using ERP.Common;
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    Voucher List
                </h3>
            </div>
        </div>

        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">

                <li class="m-portlet__nav-item">
                    @Html.DropDownList("Key", new SelectList(new ERP.Infrastructure.Repositories.FinRepository.FinVTypeRepository().GetAllTypes(), "Key", "Vtype"), new { @class = "form-control ", style = "padding:15 px", Id = "vType" })
                </li>
                <li class="m-portlet__nav-item">
                    @Html.DropDownList("VoucherStatus", EnumHelper.GetSelectList(typeof(ERP.Common.VoucherStatus)), new { @class = "form-control", Id = "vStatus" })
                </li>
                <li class="m-portlet__nav-item">
                    <a href="#" class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air hidden" @*Sec-menuId="@SecurityConstants.VoucherListbtnSearch"*@ id="btnSearch">
                        <span style="color: #ffffff">
                            <i class="la la-find"></i>
                            <span>Search</span>
                        </span>
                    </a>
                </li>

                <li class="m-portlet__nav-item">

                    <a href="#" class="btn m-btn m-btn--gradient-from-focus  m-btn--gradient-to-danger hidden" id="btnUnPostVoucher">
                        <span>
                            <img src="~/assets/vendors/base/images/owl.carousel/ajax-loader.gif" id="UnPostimg" style="display: none; height: 15px;width: 15px" />

                            <i class="fa fa-lock"></i>
                            <span>Un-Post</span>
                        </span>
                    </a>
                </li>
                <li class="m-portlet__nav-item">

                    <a href="#" class="btn m-btn m-btn--gradient-from-focus  m-btn--gradient-to-danger hidden" id="btnPostVoucher">
                        <span>
                            <img src="~/assets/vendors/base/images/owl.carousel/ajax-loader.gif" id="Postimg" style="display: none; height: 15px;width: 15px" />

                            <i class="fa fa-lock"></i>
                            <span>Post</span>
                        </span>
                    </a>

                </li>

            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <!--begin::Section-->
        <div class="m-section">
            <div class="m-section__content">
                <table class="table table-striped- table-bordered table-hover table-checkable CountryTable  voucher" id="fnVoucherList">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Voucher No</th>
                            <th>Voucher Key</th>
                            <th>Date</th>
                            <th>Total Debit</th>
                            <th> Total Credit</th>
                            <th>Remaks</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AuthenticationKeyForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>





@*<script src="~/Content/VigorJs/Alert/Alert.js"></script>*@

<script src="~/Content/VigorJs/VouchersTable/VoucherList.js"></script>