@model ERP.Core.Models.Common.City
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "CityForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if (ViewBag.Title != "Create")
                {@Html.HiddenFor(a => a.Id) }

            <div class="row">
                <div class="form-group m-form__group col-sm-12">
                    <label for="exampleInputEmail1">City Name:</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control m-input", @placeholder = "" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group m-form__group col-sm-12">
                    <label for="exampleInputEmail1">City Code:</label>
                    @Html.TextBoxFor(a => a.Ccode, new { @class = "form-control m-input", @placeholder = "" })
                    @Html.ValidationMessageFor(model => model.Ccode, "", new { @class = "text-danger" })
                </div>
                @*<div class="form-group m-form__group col-sm-12">
                                            <label for="exampleInputEmail1">Region</label>
                        @Html.DropDownListFor(a => a.State.Country.Region, new SelectList(new ERP.Infrastructure.Repositories.Common.RegionRepository().GetAllRegions(), "Id", "Title"), new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.State.Country.Region, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group m-form__group col-sm-12">
                        <label for="exampleInputEmail1">Country</label>
                        @Html.DropDownListFor(a => a.State.Country, new SelectList(new ERP.Infrastructure.Repositories.Common.CountryRepository().GetAllCountries(), "Id", "Name"), new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.State.Country, "", new { @class = "text-danger" })
                    </div>*@
                <div class="form-group m-form__group col-sm-12">
                    <label for="exampleInputEmail1">State</label>
                    @Html.DropDownListFor(a => a.StId, new SelectList(new ERP.Infrastructure.Repositories.Common.StateRepository().GetAllStates(), "Id", "Name"), new { @class = "form-control " })
                    @Html.ValidationMessageFor(model => model.StId, "", new { @class = "text-danger" })
                </div>
            </div>

        }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-success" onclick="SubmitCityForm()">
                <span>
                    <i class="fa fa-save"></i>
                    <span>Save</span>
                </span>
            </button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">
                <span>
                    <i class="flaticon-cancel"></i>
                    <span>Cancel</span>
                </span>
            </button>
        </div>
    </div>
</div>