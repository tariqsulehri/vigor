@model IEnumerable<ERP.Core.Models.Party.FinParty>
@{
    ViewBag.Title = "Parties";
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered " style="    width: 65% !important;max-width: 10000px !important;">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="m-portlet__body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="FindPartyDataTable" role="grid" aria-describedby="kt_table_1_info" width="100%">
                            <thead style="background-color:#28469c; color:#ffffff">
                                <tr role="row">
                                    <th>Title</th>
                                    <th>Company Name</th>
                                    <th>Email</th>
                                    <th>Mailing Address</th>
                                    <th>GL Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.Id" style="cursor:pointer" onclick="SelectPartySetInGrid(this)">
                                        <td>@item.Title</td>
                                        <td>@item.CompanyName</td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.MailingAddress</td>
                                        <td>@item.GlCode</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @*<button type="button" class="btn btn-success" onclick="SubmitDepartmentForm()">
                    <span>
                        <i class="fa fa-save"></i>
                        <span>Save</span>
                    </span>
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span>
                        <i class="flaticon-cancel"></i>
                        <span>Cancel</span>
                    </span>
                </button>*@
        </div>
    </div>
</div>
<script>
    var table = $('#FindPartyDataTable').DataTable({})
</script>