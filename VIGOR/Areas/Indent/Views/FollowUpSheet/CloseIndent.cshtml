@{ 
    string AlreadyClosed = ViewBag.AlreadyClosed;
    string SuccessfullyClosed = ViewBag.SuccessfullyClosed;
}
<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Indent Close</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
           
            <div class="row">
                @if (!string.IsNullOrEmpty(AlreadyClosed))
                {
                    <h3 style="color:red; text-align:center">@AlreadyClosed</h3>
                }
                @if (!string.IsNullOrEmpty(SuccessfullyClosed))
                {
                    <h3 style="color:green;text-align:center">@SuccessfullyClosed</h3>
                }
            </div>
            
        </div>

        <div class="modal-footer">
            
            <button type="button" class="btn btn-warning" data-dismiss="modal">
                <span>
                    <i class="flaticon-cancel"></i>
                    <span>Cancel</span>
                </span>
            </button>
        </div>

    </div>
</div>
