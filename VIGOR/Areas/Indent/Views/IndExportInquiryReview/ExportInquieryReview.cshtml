@model ERP.Core.Models.Indenting.IndentExport.IndExportInquiry
@using ERP.Infrastructure.Repositories.Indenting.IndentExport
@using ERP.Infrastructure.Repositories.Parties


<style>
    .tdpading {
        padding-left: 10px !important;
    }

    .decimal {
        text-align: right
    }

    .my-custom-scrollbar {
        /*position: relative;s
        height: 200px;
        overflow: auto;*/
    }

    td {
        padding: 0px !important;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>
<div class="modal-dialog modal-lg" style="max-width: 90% !important;">
    <div class="modal-content">
        <div class="m-portlet">
        @using (Html.BeginForm("Create", "InquieryReview", FormMethod.Post, new {id = "CurrencyForm"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(a => a.Id)
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Export Inquiry Review
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <button class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air">
                                <span>
                                    <i class="fa fa-save"></i>
                                    <span>Save</span>
                                </span>
                            </button>
                        </li>
                        <li class="m-portlet__nav-item">
                            <button type="button" class="btn btn-warning" data-dismiss="modal">
                                <span>
                                    <i class="flaticon-cancel"></i>
                                    <span>Cancel</span>
                                </span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
          
                <div class="m-portlet__body" style="padding: 20px;">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-5">
                                <table>

                                    <tbody>
                                    <tr>
                                        <td>Date</td>
                                        <td> @Html.TextBoxFor(a => a.CreatedOn, new { @class = "form-control ", type = "Date", Value = Model.CreatedOn.ToString("yyyy-MM-dd"), @readonly = "readonly" })</td>
                                        <td>InquieryNO</td>
                                        <td> @Html.TextBoxFor(a => a.InquiryKey, new { @class = "form-control", @readonly = "readonly" })</td>
                                    </tr>
                                    <tr>
                                        <td>Department</td>
                                        <td colspan="3"><input type="text" value="@ViewBag.Department" readonly="readonly" class="form-control" /></td>

                                    </tr>
                                    <tr>
                                        <td>Customer</td>
                                        <td colspan="3">   <input type="text" value="@ViewBag.Customer" readonly="readonly" class="form-control" /></td>

                                    </tr>
                                    <tr>
                                        <td>Order Confirm To</td>

                                        <td colspan="3">@Html.DropDownListFor(a => a.CustomerId, new SelectList(new FinPartyRepository().GetAllParties(), "Id", "Title"), "", new { @class = "form-control" })
                                        </td>

                                    </tr>
                                    </tbody>

                                </table>
                            </div>
                            <div class="col-sm-7">
                                <table class="table">
                                    <thead style="background-color: #28469c; color: #ffffff">
                                    <tr role="row">
                                        <th>Reviews</th>
                                        <th width="20">Status</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            <p>Product Requirements have been conveyed to Suppliers</p>
                                        </td>
                                        <td>
                                            <div class="form-group row">
                                                <input type="checkbox" class="form-control"><span></span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>Any Special Conditions have conveyed to Suppliers</p>
                                        </td>
                                        <td>
                                            <div class="form-group row">
                                                <input type="checkbox" class="form-control"><span></span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>Supplier is capable of meeting all requirements set by customer</p>
                                        </td>
                                        <td>
                                            <div class="form-group row">
                                                <input type="checkbox" class="form-control"><span></span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>Supplier is on approved Supplier list</p>
                                        </td>
                                        <td>
                                            <div class="form-group row">
                                                <input type="checkbox" class="form-control"><span></span>
                                            </div>
                                        </td>
                                    </tr>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>



                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline">
                            <thead style="background-color: #28469c; color: #ffffff">

                            <tr>
                                <th width="20">Select</th>
                                <th width="80">Commodit</th>
                                <th width="80">Commodity</th>
                                <th width="150">Inquiry Detail</th>
                                <th width="50">Supp000303</th>
                                <th width="50">Supp000360</th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr role="row" class="odd">

                                <td>
                                    <div class="form-group row">
                                        <input type="checkbox" class="form-control"><span></span>
                                    </div>
                                </td>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                            </tr>
                            </tbody>

                        </table>
                    </div>



                </div>
          
        }
        </div>


    </div>
</div>