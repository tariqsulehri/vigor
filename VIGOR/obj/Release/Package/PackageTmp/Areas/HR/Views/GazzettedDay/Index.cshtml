
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-demo__preview">
    <div class="col-lg-12">
        <div class="m-portlet">

            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Gazzetted Day
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <input data-switch="true" type="checkbox" onchange="ChangeSwitch()" id="Switch1" checked="checked" data-on-text="Active" data-handle-width="10" data-off-text="InActive" data-on-color="success">
                        </li>
                        <li class="m-portlet__nav-item">
                            <a href="#" class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air" onclick="OpenEmployeeGazzettedModal('@Url.Action("Create", "GazzettedDay")')">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Add</span>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">

                <table class="table table-striped- table-bordered table-hover table-checkable GazzettedTable" id="">
                    <thead style="background-color:#28469c; color:#ffffff">
                        <tr role="row">
                            <th>ID</th>
                            <th>Date From</th>
                            <th>Date To</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>

            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="EmployeeGazzettedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/Content/VigorJs/HR/Gazzetted/CreateOrUpdate.js"></script>
<script src="~/Content/VigorJs/HR/Gazzetted/Index.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/VigorJs/General Grid/GeneralGrid.js"></script>