@model ERP.Core.Models.HR.HR_Designation
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Manage Communication</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("CreateOrUpdate", "EmpPosition", FormMethod.Post, new { id="PositionForm"}))
        {
            <div class="modal-body">
                <div class="form-group row" id="productform">
                    <div class="col-lg-6">
                        <label>ID:</label>
                        @Html.TextBoxFor(a => a.DesignationId, new { @class = "form-control", @id = "DesignationId", @name = "DesignationId" })
                        @Html.ValidationMessageFor(a => a.DesignationId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Hierarcy No:</label>
                        @Html.TextBoxFor(a => a.HirarchyPriority, new { @class = "form-control", @id = "HirarchyPriority" })
                        @Html.ValidationMessageFor(a => a.HirarchyPriority, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Designation:</label>
                        @Html.TextBoxFor(a => a.Description, new { @class = "form-control", @id = "Description" })
                        @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Required Education:</label>
                        @Html.TextBoxFor(a => a.RequiredEducation, new { @class = "form-control", @id = "RequiredEducation" })
                        @Html.ValidationMessageFor(a => a.RequiredEducation, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Experience:</label>
                        @Html.TextBoxFor(a => a.Experience, new { @class = "form-control", @id = "Experience" })
                        @Html.ValidationMessageFor(a => a.Experience, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6">
                        <label>Skill Required:</label>
                        @Html.TextBoxFor(a => a.SkillsRequired, new { @class = "form-control", @id = "SkillsRequired" })
                        @Html.ValidationMessageFor(a => a.SkillsRequired, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-8">
                        <label>Remarks:</label>
                        @Html.TextAreaFor(a => a.Remarks, new { @class = "form-control", @id = "Remarks" })
                        @Html.ValidationMessageFor(a => a.Remarks, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4" style="padding-top:20px;">
                        <div class="m-checkbox-list">
                            <label class="m-checkbox m-checkbox--primary">
                                @Html.CheckBoxFor(a => a.isactive, new { @class = "form-control", @id = "Remarks", @type="checkbox"})
                                Is Active
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SubmitPositionForm()">
                    <span>
                        <i class="fa fa-save"></i>
                        <span>Save</span>
                    </span>
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span>
                        <i class="flaticon-cancel"></i>
                        <span>Cancel</span>
                    </span>
                </button>
            </div>
        }
    </div>
</div>
<script>
    $(function () {
        $("#productform").validate(
            {
                rules:
                {
                    DesignationId:
                    {
                        required: true,
                        maxlength: 2
                    }
                }
            });
    
    });
</script>