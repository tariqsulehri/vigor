<style>
    .highlight {
        background-color: #ff6a00;
    }

    .scroll {
        overflow-y: auto;
        height: 135px;
    }

    .table_div {
        overflow: auto;
        width: 100%;
        height: 200px;
    }

    .table-td td,
    .table-th th {
        border: 1px solid #000;
        width: 40px;
    }

    #m_table_1 {
        table-layout: fixed;
        width: 100% !important;
    }

    .table-td td:first-child, .table-th th:first-child {
        position: sticky;
        left: 0;
        z-index: 1;
        background-color: #D3D3D3;
    }

    .table-td td:nth-child(2), .table-th th:nth-child(2) {
        position: sticky;
        left: 50px;
        z-index: 2;
        background-color: #D3D3D3;
    }

    .table-td td:last-child, .table-th th:last-child {
        position: sticky;
        right: 0;
        z-index: 1;
        background-color: #D3D3D3;
    }

    .table-td td:nth-last-child(2), .table-th th:nth-last-child(2) {
        position: sticky;
        right: 50px;
        z-index: 3;
        background-color: #D3D3D3;
    }

    .table-td td:nth-last-child(3), .table-th th:nth-last-child(3) {
        position: sticky;
        right: 100px;
        z-index: 3;
        background-color: #D3D3D3;
    }

    .table-td td:nth-last-child(4), .table-th th:nth-last-child(4) {
        position: sticky;
        right: 150px;
        z-index: 3;
        background-color: #D3D3D3;
    }

    .table-td td:nth-last-child(5), .table-th th:nth-last-child(5) {
        position: sticky;
        right: 200px;
        z-index: 3;
        background-color: #D3D3D3;
    }

    .table-td td:nth-last-child(6), .table-th th:nth-last-child(6) {
        position: sticky;
        right: 250px;
        z-index: 3;
        background-color: #D3D3D3;
    }

    .table-head th {
        position: sticky;
        top: 0;
    }

    .table-th th:first-child, .table-th th:last-child {
        z-index: 2;
    }
</style>
