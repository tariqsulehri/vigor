@using System.Web.UI.WebControls
@using ERP.Core.Enums
@using ERP.Core.Models.Admin
@{
    ViewBag.Title = "LookUpContracts";
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered " style="    width: 85% !important;max-width: 10000px !important;">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class=" form-group m-form__group row">
                        <div class="col-lg-4">
                            <label for="exampleInputEmail1">From Date :</label>
                            @Html.TextBox("fromDate", "", new { @class = "form-control", type = "date", id = "fromDate", Value = LoggedinUser.CurrentFiscalYear.StartDate.ToString("yyyy-MM-dd") })
                        </div>
                        <div class="col-lg-4">
                            <label for="exampleInputEmail1">To Date :</label>
                            @Html.TextBox("toDate", "", new { @class = "form-control", type = "date", id = "toDate", Value = LoggedinUser.CurrentFiscalYear.EndDate.ToString("yyyy-MM-dd") })

                        </div>
                        <div class="col-lg-3">
                            <label for="exampleInputEmail1">Indent No :</label>
                            @Html.TextBox("indentNo", "", new { @class = "form-control", id = "indentNo" })


                        </div>
                        <div class="col-lg-4">
                            <label for="exampleInputEmail1">Department :</label>
                            @Html.DropDownList("department", new SelectList(new ERP.Infrastructure.Repositories.HR.HrDepartmentRepository().GetAllDepartment(), "id", "Title"), new { @class = "form-control ", id = "dptID" })
                        </div>
                        <div class="col-lg-4">
                            <label for="exampleInputEmail1">Seller Contract No :</label>
                            @Html.TextBox("SContractNO", "", new { @class = "form-control", id = "SCNO" })

                        </div>
                        <div class="col-lg-2">
                            <label>Status:</label>
                            @Html.DropDownList("status", new SelectList(Enumeration.GetAll<ERP.Common.CloseStatus>(), "Key", "Value", 1), new { @class = "form-control ", id = "status" })

                        </div>
                        <div class="col-lg-1" style="padding-top: 10px;">
                            <button type="button" class="btn btn-success" onclick="LoadLookUpContracts()">
                                <span>
                                    <i class="fa fa-save"></i>
                                    <span>LookUp</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="ContractTable" role="grid" aria-describedby="kt_table_1_info" width="100%">
                            <thead style="background-color:#28469c; color:#ffffff">
                                <tr role="row">
                                    <th>Sales Contract No.</th>
                                    <th>Indent Date</th>
                                    <th>Seller Contract</th>
                                    <th>Seller</th>
                                    <th>Buyer</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/VigorJs/IndentDomestic/_CreateOrUpdate.js"></script>

