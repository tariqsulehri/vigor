@using ERP.Core.Models.Indenting.Inspection;
@{
    Layout = null;
    List<YarnInspection> lstYarnIns = ViewBag.YarnInspection;
    List<FabricInspReportLocal> lstFabricIns = ViewBag.FabricInspection;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content ">
        <div class="modal-header p-3">
            <h5 class="modal-title" id="exampleModalLabel">Inspections</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body p-0">
            <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                 
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                            <thead style="background-color:#28469c; color:#ffffff">
                                <tr role="row">
                                    <th>Inspection Reports</th>
                                    <th width="5%"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (lstYarnIns != null && lstYarnIns.Count > 0)
                                {
                                    foreach (var item in lstYarnIns)

                                    {
                                        <tr role="row" class="odd">
                                            <td>@item.InspectionSerialID</td>
                                            <td><a href="javascript:" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only" onclick="InspectionView('@Url.Action("InspectionView","FollowUpSheet",new {InspType=2,InspId=item.Id, Area="Indent"})')">
    <i class="flaticon-eye"></i>
</a></td>
                                        </tr>

                                    }

                                }
                                else if (lstFabricIns != null && lstFabricIns.Count > 0)
                                {
                                    foreach (var item in lstFabricIns)

                                    {
                                        <tr role="row" class="odd">
                                            <td></td>
                                            <td></td>
                                        </tr>

                                    }
                                }

                            </tbody>
                        </table>
                 
            </div>

        </div>
        
    </div>
</div>
