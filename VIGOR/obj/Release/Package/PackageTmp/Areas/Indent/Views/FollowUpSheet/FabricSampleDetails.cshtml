
@{
    Layout = null;
}
<style>
    .bootstrap-touchspin .input-group-btn:first-child .btn {
        display: none;
    }

    .input-group .input-group-btn:not(:first-child) > .btn:first-child {
        display: none;
    }
</style>

<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Fabric Sample</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label>Sales Contract No:</label>
                    <input class="form-control m-input" placeholder="" type="text" value="">
                </div>
                <div class="col-lg-4">
                    <label>Sample No:</label>
                    <input class="form-control m-input" placeholder="" type="text" value="">
                </div>
                <div class="col-lg-4">
                    <label>Commodity:</label>
                    <select class="form-control " data-val="true" data-val-number="The field CityCode must be a number." data-val-required="This is Required field...." id="CityCode" name="CityCode">
                        <option value="1"></option>
                    </select>
                </div>
                <div class="col-lg-4">
                    <label>Sample Received:</label>
                    <select class="form-control " data-val="true" data-val-number="The field CityCode must be a number." data-val-required="This is Required field...." id="CityCode" name="CityCode">
                        <option value="1"></option>
                    </select>
                </div>
                <div class="col-lg-4">
                    <label>Storage No:</label>
                    <input class="form-control m-input" placeholder="" type="text" value="">
                </div>
                <div class="col-lg-4">
                    <label>Sample Quantity:</label>
                    <div class="input-group bootstrap-touchspin">

                        <input id="m_touchspin_4" type="text" class="form-control bootstrap-touchspin-vertical-btn" value="" name="demo1" placeholder="0" style="display: block;">

                        <span class="input-group-btn-vertical">
                            <button class="btn btn-secondary bootstrap-touchspin-up" type="button"><i class="la la-plus"></i></button>
                            <button class="btn btn-secondary bootstrap-touchspin-down" type="button"><i class="la la-minus"></i></button>
                        </span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label>Cecked:</label>
                    <select class="form-control " data-val="true" data-val-number="The field CityCode must be a number." data-val-required="This is Required field...." id="CityCode" name="CityCode">
                        <option value="1"></option>
                    </select>
                </div>
                <div class="col-lg-4">
                    <label>Spec. Sheet Sent On:</label>
                    <select class="form-control " data-val="true" data-val-number="The field CityCode must be a number." data-val-required="This is Required field...." id="CityCode" name="CityCode">
                        <option value="1"></option>
                    </select>
                </div>
                <div class="col-lg-4" style="padding-top:20px;">
                    <div class="m-checkbox-list">
                        <label class="m-checkbox m-checkbox--state-primary">
                            <input type="checkbox"> Tally With Development
                            <span></span>
                        </label>
                    </div>
                </div>
                <div class="col-lg-8">
                    <label>Remarks:</label>
                    <textarea class="form-control" readonly="" rows="3"></textarea>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-success" onclick="">
                <span>
                    <i class="fa fa-save"></i>
                    <span>Save</span>
                </span>
            </button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">
                <span>
                    <i class="flaticon-cancel"></i>
                    <span>Cancel</span>
                </span>
            </button>
        </div>
    </div>
</div>