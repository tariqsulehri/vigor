@model IEnumerable<ERP.Core.Models.Indenting.IndentDomestic.IndDomesticDispatchSchedule>
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content ">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Fabric Sample Details</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                            <thead style="background-color:#28469c; color:#ffffff">

                                <tr role="row">
                                    <th>Tran Date</th>
                                    <th>Quantity</th>
                                    <th>Balance</th>
                                    <th>Transporter</th>
                                    <th>STax In</th>
                                    <th>Remarks</th>
                                    <th>Type</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var disp in Model.Where(a =>a.TypeOfTransaction == "D" || a.TypeOfTransaction == "R"))
                                {
                                <tr role="row">
                                    <td>@disp.TransDate.ToString("yyyy-MM-dd")</td>
                                    <td>@disp.Quantity</td>
                                    <td>@disp.Balance</td>
                                    <td>@disp.GoodsForwarder.Name</td>
                                    <td>@disp.SalestaxInvoiceNo</td>
                                    <td>@disp.Remarks</td>
                                    <td>@disp.TypeOfTransaction</td>
                                </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                            <thead style="background-color:#28469c; color:#ffffff">

                                <tr role="row">
                                    <th>Tran Date</th>
                                    <th>Quantity</th>
                                    <th>Received Amount</th>
                                    <th>Remarks</th>

                                </tr>

                            </thead>

                            <tbody>
                                @foreach (var disp in Model.Where(a => a.TypeOfTransaction == "P"))
                                {
                                    <tr role="row">
                                        <td>@disp.TransDate.ToString("yyyy-MM-dd")</td>
                                        <td>@disp.Quantity</td>
                                        <td>@disp.Balance</td>
                                        <td>@disp.Remarks</td>
                                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">

        </div>
    </div>
</div>
