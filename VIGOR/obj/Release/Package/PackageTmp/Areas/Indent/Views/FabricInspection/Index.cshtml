@using ERP.Core.Models.Indenting.Inspection
@using ERP.Infrastructure.Repositories.Indenting
@using ERP.Infrastructure.Repositories.Indenting.Inspection
@using ERP.Infrastructure.Repositories.Parties
@model ERP.Core.Models.Indenting.Inspection.FabInspReportLocalSum
@using ERP.Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
    <div class="m-demo__preview">
        <div class="row">
            <div class="col-lg-12">

                <div class="m-portlet">

                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Fabric Inspection Register
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">

                                <li class="m-portlet__nav-item">
                                    <a href="@Url.Action("Create","FabricInspection",new { Area="Indent"})" class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.FabricInspRegisterbtnAdd">
                                        <span>
                                            <i class="flaticon-plus"></i>
                                            <span>Add</span>
                                        </span>
                              
                                    </a>

                                </li>
                                <li class="m-portlet__nav-item">
                                    <button class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.FabricInspRegisterbtnPrint">
                                        <span>
                                            <i class="la la-print"></i>
                                            <span>Print Register</span>
                                        </span>
                                    </button>

                                </li>
                                <li class="m-portlet__nav-item">
                                    <a href="#" class="btn btn-warning m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.FabricInspRegisterbtnCancel">
                                        <span style=" color:#ffffff">
                                            <i class="flaticon-cancel"></i>
                                            <span>Cancel</span>
                                        </span>
                                    </a>

                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="m-portlet__body">
                        <div class="row">
                        @using (Html.BeginForm("Index", "FabricInspection", FormMethod.Post))
                        {
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        <label>Report No:</label>
                                        @Html.TextBox("reportNo", null, new { type = "text", @class = "form-control" })
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Indent No:</label>
                                        @Html.TextBox("indenttNo", null, new { type = "text", @class = "form-control" })
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Date From:</label>
                                        @Html.TextBox("fromDate", null, new { type = "date", @class = "form-control", @min = ViewBag.FromDate.ToString("yyyy-MM-dd"), @max = ViewBag.Todate.ToString("yyyy-MM-dd"), Value = ViewBag.FromDate.ToString("yyyy-MM-dd") })
                                        @*@Html.TextBox("fromDate", null, new { type = "date", @class = "form-control", @min = ViewBag.FromDate.ToString("yyyy-MM-dd"), @max = ViewBag.Todate.ToString("yyyy-MM-dd"), Value = ViewBag.FromDate.ToString("yyyy-MM-dd") })*@
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Date To:</label>
                                        @Html.TextBox("toDate", null, new { type = "date", @class = "form-control", @min = ViewBag.FromDate.ToString("yyyy-MM-dd"), @max = ViewBag.Todate.ToString("yyyy-MM-dd"), Value = ViewBag.Todate.ToString("yyyy-MM-dd") })
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Inspection Type:</label>
                                        @Html.DropDownList("inspectionType", new SelectList(new FabricInspTypeRepository().GetAllFabricInspTypes(), "Id", "Description"), new { @class = "form-control " })
                                    </div>
                                    <div class="col-lg-2">
                                        <label>Report Standard:</label>

                                        @*@Html.DropDownList("reportStandard", new SelectList(new reportsta().GetAllFabricInspTypes(), "Id", "Description"), new { @class = "form-control " })*@
                                        <select class="form-control " data-val="true" data-val-number="The field CityCode must be a number." data-val-required="This is Required field...." id="CityCode" name="CityCode">
                                            <option value="1"></option>
                                        </select>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group row">
                                            <div class="col-lg-12" style="padding-top: 15px;">
                                                <div class="kt-section__content kt-section__content--solid">
                                                    <button type="submit" class="btn btn-primary hidden" Sec-menuId="@SecurityConstants.FabricInspRegisterbtnLoadInsp">Load Inspection</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>

                        <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                                        <thead style="background-color:#28469c; color:#ffffff">
                                            <tr role="row">
                                                <th>Inspection Serial</th>
                                                <th>Report No</th>
                                                <th>Inspection Date</th>
                                                <th>Inspection Type</th>
                                                <th>Inspection Conclusion</th>
                                                <th>Contract No</th>

                                            </tr>
                                        </thead>
                                    <tbody>
                                    @if (ViewBag.FabricInspection != null)
                                    {
                                        foreach (var item in ViewBag.FabricInspection)
                                        {
                                            <td>@item.InspRepoSr</td>
                                            <td>@item.InspRepoNo</td>
                                            <td>@item.InspectionDate</td>
                                            <td>@item.FabricInspType.Description</td>
                                            <td>@item.TearingSWrap</td>
                                            <td>@item.IndentKey</td>
                                        }
                                    }   
                                    </tbody>

                                    </table>
                                </div>
                            </div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="kt_table_1_info" role="status" aria-live="polite">Showing 1 to 10 of 50 entries</div></div><div class="col-sm-12 col-md-7 dataTables_pager"><div class="dataTables_length" id="kt_table_1_length"><label>Display <select name="kt_table_1_length" aria-controls="kt_table_1" class="custom-select custom-select-sm form-control form-control-sm"><option value="5">5</option><option value="10">10</option><option value="25">25</option><option value="50">50</option></select></label></div><div class="dataTables_paginate paging_simple_numbers" id="kt_table_1_paginate"><ul class="pagination"><li class="paginate_button page-item previous disabled" id="kt_table_1_previous"><a href="#" aria-controls="kt_table_1" data-dt-idx="0" tabindex="0" class="page-link"><i class="la la-angle-left"></i></a></li><li class="paginate_button page-item active"><a href="#" aria-controls="kt_table_1" data-dt-idx="1" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="2" tabindex="0" class="page-link">2</a></li><li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="3" tabindex="0" class="page-link">3</a></li><li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="4" tabindex="0" class="page-link">4</a></li><li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="5" tabindex="0" class="page-link">5</a></li><li class="paginate_button page-item next" id="kt_table_1_next"><a href="#" aria-controls="kt_table_1" data-dt-idx="6" tabindex="0" class="page-link"><i class="la la-angle-right"></i></a></li></ul></div></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>