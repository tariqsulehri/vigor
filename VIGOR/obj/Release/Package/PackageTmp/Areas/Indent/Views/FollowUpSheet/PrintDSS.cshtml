@{
    ViewBag.Title = "Print DSS";
    Layout = null;
}

<style type="text/css">
    .iframe-container {
        position: relative;
        overflow: hidden;
        padding-top: 56.25%;
    }

        .iframe-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }
</style>
<div class="modal-dialog modal-lg" role="document" style="width: 85% !important;max-width: 10000px !important;">
    <div class="modal-content">
        <div class="modal-header  m-2 p-0">
            <h5 class="modal-title " id="exampleModalLabel">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="iframe-container">
                <iframe src="@Url.Action("DSSReport", "FollowUpSheet", new {Area="Indent"})"></iframe>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

        </div>
    </div>
</div>




