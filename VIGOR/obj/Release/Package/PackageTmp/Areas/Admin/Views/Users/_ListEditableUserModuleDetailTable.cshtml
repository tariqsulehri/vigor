<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //$(":input[type='button']").button();
        $('#AddAdminModuleDetail').click(function () {
            var _userId = $('#UserId').val();
            var _id = $('#AdminModuleDetailId').val();

            if (_userId == '') {
                return false;
            }
            var _parameters = { userId: _userId, id: _id };
            $.ajax({
                url: "/Admin/Users/AddAdminModuleDetailReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#RefreshingMainPage').empty();
                    $('#RefreshingMainPage').html(data);
                }
            });
        });
    });
</script>
<input name='UserId' id='UserId' type="hidden" value="@ViewBag.UserId" />
<label>
    Admin Module Detail:
</label>
@Html.DropDownList("AdminModuleDetailId", null, "Select-AdminModuleDetail", new { })
<input type="button" id="AddAdminModuleDetail" value="Add" />
