@using ERP.Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
    <div class="m-demo__preview">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Groups
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item hidden" Sec-menuId="@SecurityConstants.GroupsbtnActive_InActive">
                            <input data-switch="true" type="checkbox" checked="checked" data-on-text="Active" data-handle-width="10" data-off-text="InActive" data-on-color="success">
                        </li>
                        <li class="m-portlet__nav-item">
                            <a href="#" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.GroupsbtnPrint">
                                <span style=" color:#ffffff">
                                    <i class="la la-print"></i>
                                    <span>Print</span>
                                </span>
                            </a>
                        </li>
                        <li class="m-portlet__nav-item">
                            <a href="#" class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.GroupsbtnAdd" onclick="OpenGroupModal('@Url.Action("Create", "Group")')">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Add</span>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <table class="table table-striped- table-bordered table-hover table-checkable" id="GeneralGrid">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Group Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Nishat Group</td>
                            <td ><span class="dropdown">
                        <a href="#" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                            Action
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-196px, -30px, 0px);">
                            <a class="dropdown-item" href="#"><i class="la la-edit"></i> Edit</a>
                        </div>
                    </span>
                </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Media Group</td>
                            <td ><span class="dropdown">
                        <a href="#" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                            Action
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-196px, -30px, 0px);">
                            <a class="dropdown-item" href="#"><i class="la la-edit"></i> Edit</a>
                        </div>
                    </span>
                </td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Agriculture Group</td>
                            <td ><span class="dropdown">
                        <a href="#" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                            Action
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" x-placement="top-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-196px, -30px, 0px);">
                            <a class="dropdown-item" href="#"><i class="la la-edit"></i> Edit</a>
                        </div>
                    </span>
                </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="GroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/VigorJs/Group/_CreateOrUpdate.js"></script>
<script src="~/Content/VigorJs/General Grid/GeneralGrid.js"></script>

