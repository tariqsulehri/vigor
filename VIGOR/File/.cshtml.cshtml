@{
    ViewBag.Title = "LookUpContracts";
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-4">
                    <div class=" form-group m-form__group">
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">Indent No :</label>
                            <input type="text" id="indentNo" />
                        </div>
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">Department :</label>
                            @Html.DropDownList("department", new SelectList(new ERP.Infrastructure.Repositories.HR.HrDepartmentRepository().GetAllDepartment(), "id", "Title"), new { @class = "form-control " })
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    <div class=" form-group m-form__group">
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">Date :</label>
                            <input type="date" id="date" />
                        </div>
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">To Date :</label>
                            <input type="date" id="toDate" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group m-form__group">
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">Seller Contract No :</label>
                            <input type="text" id="contractNo" />
                        </div>
                        <div class="form-group m-form__group">
                            <button type="button" class="btn btn-success" onclick="SubmitLookUpContracts()">
                                <span>
                                    <i class="fa fa-save"></i>
                                    <span>LookUp</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="row">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="m_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 992px;">
                            <thead style="background-color:#28469c; color:#ffffff">
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 53.25px;" aria-label="Country: activate to sort column ascending">Sales Contract No.</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 58.25px;" aria-label="Ship City: activate to sort column ascending">Indent Date</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 66.25px;" aria-label="Ship Address: activate to sort column ascending">Seller Contract</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 68.25px;" aria-label="Company Agent: activate to sort column ascending">Seller</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 82.25px;" aria-label="Company Name: activate to sort column ascending">Buyer</th>
                                    <th class="sorting" tabindex="0" aria-controls="m_table_1" rowspan="1" colspan="1" style="width: 53.25px;" aria-label="Country: activate to sort column ascending">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>

