@using ERP.Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
    <div class="m-demo__preview">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Department
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item hidden" Sec-menuId="@SecurityConstants.DepartmentbtnActive_InActive">
                            <input data-switch="true" type="checkbox" checked="checked" data-on-text="Active" data-handle-width="10" data-off-text="InActive" data-on-color="success">
                        </li>
                        <li class="m-portlet__nav-item">
                            <a href="@Url.Action("PrintDepartment","Department",new {Area="HR" })" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.DepartmentbtnPrint">
                                <span style=" color:#ffffff">
                                    <i class="la la-print"></i>
                                    <span>Print</span>
                                </span>
                            </a>
                        </li>
                        <li class="m-portlet__nav-item">
                            <a href="#" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air hidden" Sec-menuId="@SecurityConstants.DepartmentbtnAdd" onclick="OpenDepartmentModal('@Url.Action("Create", "Department")')">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Add</span>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <table class="table table-striped- table-bordered table-hover table-checkable DepartmentTable" id="">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Department Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="DepartmentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/VigorJs/Department/_CreateOrUpdate.js"></script>
<script src="~/Content/VigorJs/Department/Index.js"></script>
<script src="~/Content/VigorJs/General Grid/GeneralGrid.js"></script>

